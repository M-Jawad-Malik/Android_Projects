<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServProSignUp"
    android:background="@color/Light_background"
    android:fillViewport="true">


    <ImageView
        android:id="@+id/deServico_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/deservico1"
        android:contentDescription="Logo"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/user_type_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/user_type_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deServico_logo">
        <Button
            android:id="@+id/mClientbtnC"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:text="I'm Client"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:padding="0dp"
            android:layout_marginRight="-2dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:text="I'm Service Provider"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:layout_marginRight="-2dp"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_type_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="-80dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up to Continue"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="-80dp"
            android:textColor="@color/textColor"/>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:neumorph_shapeType="pressed"
            android:padding="2dp"
            android:layout_marginTop="38dp"
            app:cardCornerRadius="5dp">
            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/SerProEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nobackground"
                android:hint="Enter Email"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:neumorph_shapeType="pressed"
            android:padding="2dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp">
            <EditText
                android:inputType="textPersonName"
                android:id="@+id/SerProName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nobackground"
                android:hint="Enter Name"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:neumorph_shapeType="pressed"
            android:padding="2dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/SerProPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nobackground"
                android:hint="Enter Password"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/passwordmatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password does not match!"
            android:layout_gravity="left"
            android:layout_marginLeft="60dp"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:neumorph_shapeType="pressed"
            android:padding="2dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/cnfrmpassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/nobackground"
                android:hint="ReEnter Password"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:layout_marginTop="35dp"
            android:id="@+id/SerPronextbtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Next"
            android:textColor="@color/textColor"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:paddingTop="1dp"
            android:paddingRight="4dp"

            android:layout_marginRight="-2dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an acouunt!"/>
            <TextView
                android:id="@+id/serProSignIntxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>