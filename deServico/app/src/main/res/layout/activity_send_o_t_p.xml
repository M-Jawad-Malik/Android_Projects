<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendOTPActivity"
    android:background="@color/Light_background"
    android:orientation="vertical"
    android:gravity="center_horizontal">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:src="@drawable/deservico1"
    android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:fontFamily="sans-serif-medium"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you a 5 digit Code"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter mobile number"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="-85dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:elevation="15dp"
        android:backgroundTint="@color/Light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:lines="1"
                android:hint="Enter mobile number"
                android:layout_marginLeft="11dp"
                android:textSize="15sp"
                android:background="@drawable/nobackground"
                android:text="+92"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:lines="1"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:hint="03034094558"
            android:layout_marginLeft="7dp"
            android:textSize="15sp"
            android:background="@drawable/nobackground"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/nextBtnSendOTP"
        android:layout_width="130dp"
        android:shadowDy="15"
        android:shadowDx="15"
        android:shadowColor="@color/white"
        android:layout_marginTop="55dp"
        android:layout_height="55dp"
        android:clickable="true"
        android:text="Next"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"/>

</LinearLayout>