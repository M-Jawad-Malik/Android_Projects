<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServProSignUp2"
    android:background="@color/Light_background"
    android:fillViewport="true">
    <ImageView
        android:id="@+id/deServico_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="38dp"
        android:src="@drawable/deservico1"
        android:contentDescription="Logo"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@id/roundimg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <FrameLayout
        android:id="@+id/roundimg"
        android:layout_marginTop="140dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/round_img_btn"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_background"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleType="centerCrop"/>

    </FrameLayout>
    <Button
        android:id="@+id/profilephoto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textStyle="normal"
        android:background="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="95dp"
        app:layout_constraintBottom_toBottomOf="@id/roundimg"
        android:backgroundTint="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/spinCardVw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roundimg"

        >
        <Spinner
            android:layout_marginTop="12dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/phoneNoCardVw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:neumorph_shapeType="pressed"
        android:padding="2dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinCardVw">
        <EditText
            android:inputType="phone"
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nobackground"
            android:hint="Enter your Phone No"
            android:textSize="16dp"
            android:layout_marginLeft="5dp"
            />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_marginTop="35dp"
        android:id="@+id/SerProSignUpbtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="@color/textColor"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneNoCardVw"
        />

</androidx.constraintlayout.widget.ConstraintLayout>