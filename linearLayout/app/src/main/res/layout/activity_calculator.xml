<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    >

    <TableRow
        android:id="@+id/screen"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="340dp"
            android:layout_height="370dp"
            android:layout_margin="10dp"
            android:layout_marginRight="50dp"
            android:background="#CDCDBB"
            android:gravity="center"/>
    </TableRow>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        >
        <TableRow
            android:id="@+id/btn_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:backgroundTint="@color/btnColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:layout_marginRight="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:text="8"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"/>
            <Button
                android:layout_width="0dp"
                android:text="9"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:gravity="center"
                />
            <Button
                android:layout_width="0dp"
                android:text="/"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="@color/equal_btnColor"/>
        </TableRow>
        <TableRow
            android:id="@+id/btn_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:backgroundTint="@color/btnColor"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"

                />
            <Button
                android:layout_width="0dp"
                android:text="5"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"/>
            <Button
                android:layout_width="0dp"
                android:text="6"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:text="*"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="@color/equal_btnColor"/>
        </TableRow>
        <TableRow
            android:id="@+id/btn_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:backgroundTint="@color/btnColor"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:text="2"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"/>
            <Button
                android:layout_width="0dp"
                android:text="3"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:text="-"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="@color/equal_btnColor"/>
        </TableRow>
        <TableRow
            android:id="@+id/btn_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <Button
                android:backgroundTint="@color/btnColor"
                android:text="."
                android:layout_marginRight="2dp"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                />
            <Button
                android:layout_width="0dp"
                android:text="0"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"/>
            <Button
                android:layout_width="0dp"
                android:text="CLR"
                android:backgroundTint="@color/btnColor"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="2dp"
                />
            <Button
                android:layout_width="0dp"
                android:text="+"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:backgroundTint="@color/equal_btnColor"/>
        </TableRow>
        <TableRow
            android:id="@+id/btn_row5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <Button android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:backgroundTint="@color/operationColor"
                android:text="="
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </TableRow>
    </LinearLayout>
</TableLayout>